<% include partials/header %>
<h1>The Tournament Standings</h1>
<hr>


<div class="row center">
    <% var k=0; %>
    <% for(k=0;k<8;k++) {%>
        
        <div class="col-lg-6 col-sm-12" style="align:center;">
            <table border=1 width=80% style="margin: 20px 0;" class="table">
                <thead class="thead-dark">
                    <tr class="thead-dark">
                        <td colspan=4 style="padding: 10px; text-align: center;"><strong>Group <%= data[k]["group"]["letter"] %></strong></td>
                    </tr>
                    <tr class=>
                        <th style="padding: 5px 10px; text-align: center;">Team</th>
                        <th style="padding: 5px 10px; text-align: center;">Games Played</th>
                        <th style="padding: 5px 10px; text-align: center;">Win/Losses/Draws</th>
                        <th style="padding: 5px 10px; text-align: center;">Points</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i=0; %>
                    <% for(i=0;i<4;i++){ %>
                        
                        <tr 
                            <% if(data[k]["group"]["teams"][i]["team"]["points" ]>=6) { %> 
                                style="background=green;"
                            <% } %>
                        >
                            <td style="padding: 2px 10px; text-align: center;"><%= data[k]["group"]["teams"][i]["team"]["country"] %></td>
                            <td style="padding: 2px 10px; text-align: center;"><%= data[k]["group"]["teams"][i]["team"]["games_played"] %></td>
                            <td style="padding: 2px 10px; text-align: center;"><%= data[k]["group"]["teams"][i]["team"]["wins"] %>/<%= data[k]["group"]["teams"][i]["team"]["losses"] %>/<%= data[k]["group"]["teams"][i]["team"]["draws"] %></td>
                            <td style="padding: 2px 10px; text-align: center;"><%= data[k]["group"]["teams"][i]["team"]["points"] %></td>
                        </tr>
                        
                    <% } %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>


<% include partials/footer %>